!!!
%html
  %head
    %meta{'charset' => 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE-Edge,chrome=1'}
    %meta{:name => 'description', :content => ''}
    %meta{:name => 'author', :content => 'Jais Cheema'}
    %meta{:name => 'viewport', :content => 'width=device-width,initial-scale=1'}
    
    %title Gatekeeper
    
    = stylesheet_link_tag 'cybertheme/application' 
    = stylesheet_link_tag('cybertheme/application-print', :media => 'print' )
    /[if lt IE 8]
      = stylesheet_link_tag 'cybertheme/application-ie' 
    
    = stylesheet_link_tag 'application' 
    
    = javascript_include_tag :application
    
    = csrf_meta_tags
  %body
    = render 'layouts/cybertheme/toolbar'
    = render 'layouts/cybertheme/header'
    = render 'layouts/cybertheme/errors'
    = yield
    = render 'layouts/cybertheme/footer'
