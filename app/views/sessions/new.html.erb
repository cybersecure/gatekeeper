<div class="panel">
  <h2>Login</h2>
  <p class="title_desp">Don't have an account? <%= link_to "Sign up!", signup_path %></p>
  <%= form_tag sessions_path, :class => 'nice' do %>
    <p>
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:username], :class => "required input-text" %>
    </p>
    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:password], :class => "required input-text" %>
    </p>
    <p>
      <label for="remember_me">
        <%= check_box_tag :remember_me %>
        Remember me
      </label>
    </p>
    <p><%= link_to "forgotten password?", new_password_reset_path %></p>
    <p class="buttons">
      <%= submit_tag "Login", :class => "small blue radius button" %>
    </p>
  <% end %>
</div>
