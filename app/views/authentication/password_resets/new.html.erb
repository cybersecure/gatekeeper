<div class="panel">
  <h2>Password Reset</h2>
  <%= form_tag password_resets_path, :method => :post, :class => 'nice' do %>
    <p>
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:email], :class => 'text-input' %>
    </p>
    <p class="buttons"><%= submit_tag "Reset Password", :class => 'small nice radius button' %></p>
  <% end %>
</div>
