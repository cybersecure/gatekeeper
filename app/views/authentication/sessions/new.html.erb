		<div class="content-container">
			<div class="container">
				<section class="span-full myform">
          <h1 class="head_title">Login</h1>
          <p class="title_desp">Don't have an account? <%= link_to "Sign up!", signup_path %></p>
          <%= form_tag sessions_path do %>
            <fieldset>
              <p>
                <%= label_tag :username %>
                <%= text_field_tag :username, params[:username], :class => "required" %>
              </p>
              <p>
                <%= label_tag :password %>
                <%= password_field_tag :password, params[:password], :class => "required" %>
              </p>
              <p class="select_option">
                <label for="remember_me">
                  <%= check_box_tag :remember_me %>
                  Remember me
                </label>
              </p><br/>
              <p class="select_option"><%= link_to "forgotten password?", new_password_reset_path %></p>
              <p class="buttons">
                <%= submit_tag "Login", :class => "button orange" %>
              </p>
            </fieldset>
          <% end %>
				</section>
			</div>
		</div>
